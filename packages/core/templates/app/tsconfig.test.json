{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/**/__tests__/*.ts",
    "src/**/__tests__/*.tsx",
    "src/tests/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "vitest.config.*",
    "vitest.setup.*"
  ]
}